---
import { siteConfig } from "../site.config";
import { resumeData, getSocialUrls, getAllSkills } from "../data/resume";

const { contact, education } = resumeData;
const siteUrl = "https://funkstyr.me";

const websiteSchema = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"@id": `${siteUrl}/#website`,
	name: `${contact.name}'s personal website`,
	url: `${siteUrl}/`,
	description: siteConfig.description,
	inLanguage: siteConfig.lang,
	publisher: {
		"@id": `${siteUrl}/#person`,
	},
	keywords: [
		"Web",
		"Technology",
		"Software Development",
		"Software Engineering",
		...getAllSkills().slice(0, 5),
	],
};

const personSchema = {
	"@context": "https://schema.org",
	"@type": "Person",
	"@id": `${siteUrl}/#person`,
	name: contact.name,
	alternateName: "funkstyr",
	url: `${siteUrl}/`,
	image: `${siteUrl}/social_card.jpg`,
	jobTitle: "Senior Software Engineer",
	worksFor: {
		"@type": "Organization",
		name: contact.currentCompany,
		url: contact.currentCompanyUrl,
	},
	alumniOf: {
		"@type": "CollegeOrUniversity",
		name: education[0]?.institution,
	},
	sameAs: getSocialUrls(),
	knowsAbout: [
		"Software Development",
		"Software Engineering",
		...getAllSkills(),
	],
};
---

<script type='application/ld+json' set:html={JSON.stringify(websiteSchema)} />
<script type='application/ld+json' set:html={JSON.stringify(personSchema)} />
