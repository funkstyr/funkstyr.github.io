---
/**
 * Print-optimized resume page for PDF generation
 * ATS-friendly: single-column, no graphics, standard headings
 * Excludes: About section, Projects section, experiences marked excludeFromPrint
 */
import { resumeData, getPrintExperience } from "../../data/resume";

const { contact, summary, education, skills } = resumeData;
const printExperience = getPrintExperience();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{contact.name} - Resume</title>
    <style is:global>
      /* Reset and base styles */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-size: 10.5pt;
        line-height: 1.3;
      }

      body {
        font-family: Arial, Helvetica, sans-serif;
        color: #000;
        background: #fff;
        max-width: 816px;
        margin: 0 auto;
        padding: 28px;
        box-sizing: border-box;
      }

      /* Header */
      .header {
        text-align: center;
        margin-bottom: 0.15in;
        border-bottom: 1px solid #000;
        padding-bottom: 0.1in;
      }

      .name {
        font-size: 18pt;
        font-weight: bold;
        margin-bottom: 0.04in;
        letter-spacing: 0.5px;
      }

      .title {
        font-size: 10pt;
        color: #333;
        margin-bottom: 0.04in;
      }

      .contact {
        font-size: 9pt;
        color: #333;
      }

      .contact a {
        color: #333;
        text-decoration: none;
      }

      .contact span {
        margin: 0 0.1in;
      }

      /* Section styles */
      .section {
        margin-bottom: 0.12in;
      }

      .section-title {
        font-size: 10pt;
        font-weight: bold;
        text-transform: uppercase;
        border-bottom: 1px solid #000;
        padding-bottom: 0.02in;
        margin-bottom: 0.06in;
        letter-spacing: 0.5px;
      }

      /* Summary */
      .summary {
        font-size: 9.5pt;
        line-height: 1.35;
      }

      /* Experience */
      .job {
        margin-bottom: 0.1in;
      }

      .job:last-child {
        margin-bottom: 0;
      }

      .job-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 0.02in;
      }

      .job-title {
        font-weight: bold;
        font-size: 10pt;
      }

      .job-date {
        font-size: 9.5pt;
        color: #333;
      }

      .job-company {
        font-size: 9.5pt;
        font-style: italic;
        margin-bottom: 0.03in;
      }

      .job-achievements {
        list-style-type: disc;
        margin-left: 0.18in;
        font-size: 9.5pt;
      }

      .job-achievements li {
        margin-bottom: 0.01in;
      }

      /* Skills */
      .skills-grid {
        font-size: 9.5pt;
      }

      .skill-row {
        margin-bottom: 0.02in;
      }

      .skill-category {
        font-weight: bold;
        display: inline;
      }

      /* Education */
      .education-item {
        font-size: 9.5pt;
      }

      .education-school {
        font-weight: bold;
      }

      .education-degree {
        font-style: italic;
      }

      /* Print styles */
      @media print {
        html, body {
          width: 216mm; /* Letter width */
          height: 279mm; /* Letter height */
          font-size: 10pt;
          background: #fff;
          overflow: visible;
        }

        body {
          padding: 10mm; /* Tighter margins */
          margin: 0;
          max-width: none;
        }

        @page {
          size: letter;
          margin: 0;
        }
      }

      /* Screen-only styles */
      @media screen {
        body {
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
          margin-top: 0.5in;
          margin-bottom: 0.5in;
        }

        .print-notice {
          position: fixed;
          top: 10px;
          right: 10px;
          background: #333;
          color: #fff;
          padding: 10px 15px;
          border-radius: 5px;
          font-size: 12px;
          cursor: pointer;
          z-index: 1000;
        }

        .print-notice:hover {
          background: #555;
        }
      }

      @media print {
        .print-notice {
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <button class="print-notice" onclick="window.print()">
      Press Ctrl+P or click to print/save as PDF
    </button>

    <header class="header">
      <h1 class="name">{contact.name.toUpperCase()}</h1>
      <p class="title">{contact.title}</p>
      <p class="contact">
        <a href={`mailto:${contact.email}`}>{contact.email}</a>
        <span>|</span>
        <a href={contact.linkedInUrl}>linkedin.com/in/{contact.linkedIn}</a>
        <span>|</span>
        <span>{contact.location}</span>
      </p>
    </header>

    <section class="section">
      <h2 class="section-title">Professional Summary</h2>
      <p class="summary">{summary.detailed}</p>
    </section>

    <section class="section">
      <h2 class="section-title">Experience</h2>

      {printExperience.map((exp) => (
        <div class="job">
          <div class="job-header">
            <span class="job-title">{exp.position}</span>
            <span class="job-date">{exp.startDate} - {exp.endDate === "Current" ? "Present" : exp.endDate}</span>
          </div>
          <p class="job-company">{exp.company}{exp.location ? `, ${exp.location}` : ""}</p>
          <ul class="job-achievements">
            {exp.achievements.map((achievement) => (
              <li>{achievement}</li>
            ))}
          </ul>
        </div>
      ))}
    </section>

    <section class="section">
      <h2 class="section-title">Skills</h2>
      <div class="skills-grid">
        {skills.map((category) => (
          <div class="skill-row">
            <span class="skill-category">{category.title}:</span>
            {" "}{category.skills.join(", ")}
          </div>
        ))}
      </div>
    </section>

    <section class="section">
      <h2 class="section-title">Education</h2>
      {education.map((edu) => (
        <div class="education-item">
          <span class="education-school">{edu.institution}</span>
          <br />
          <span class="education-degree">
            {edu.degree}{edu.minor ? ` | Minor: ${edu.minor}` : ""}
          </span>
        </div>
      ))}
    </section>

    <script>
      // Auto-trigger print dialog when page loads (optional - user can dismiss)
      if (window.location.search.includes("print=true")) {
        window.addEventListener("load", () => {
          setTimeout(() => window.print(), 500);
        });
      }
    </script>
  </body>
</html>
